@model IEnumerable<Producer>
@{
    ViewData["Title"] = "Index";
}

<h3>My Producers</h3>
<hr />
<partial name="SearchPartialView" />
<table class="table table-hover">
    <tr class="table-primary " style="font-size:22px">
        <th>Photo</th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach(var p in Model)
    {
        <tr style="font-size:22px">
            <td>
                <div class="col-md-6  d-flex justify-content-center">
                    <img src="@($"{FileSettings.ImagePathProducer}/{p.Cover}")" alt="@p.Name" style="width:140px ;height:140px ;border-radius:30px" />
                </div>
            </td>
            <td class="align-content-center">@p.Name</td>
            <td class="align-middle">
                <partial name="_ActionPartialView" model="@p.Id" />
            </td>
        </tr>
    }
</table>
<a asp-action="Add" class="btn btn-primary btn-lg mt-3">
    <i class="bi-bag-plus-fill m-1" style="color:gold"></i> Add Producer</a>