@model AddActorViewModel
<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label mt-2"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="control-label mt-2"></label>
            <input asp-for="Bio" class="form-control" />
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <partial name="CoverPartialView" />
        <div class="form-group mt-3">
            <input type="submit" value="AddNew" class="btn btn-primary AddNew" />
        </div>
    </div>
    <div class="col-md-6 d-flex justify-content-end">
        <img class="cover-preview d-none " alt="Cover" style="width:300px;height:300px" />
    </div>
</div>