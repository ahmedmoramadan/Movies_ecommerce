<td class="align-content-center">@Model.Name</td>
<td>
    <div class="d-flex justify-content-end">
        @model BasicEntity0
        <a class="btn btn-info rounded rounded-3 me-2" asp-action="Edit" asp-route-id="@Model.Id">
