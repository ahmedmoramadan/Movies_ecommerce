@model IEnumerable<Actor>
@{
    ViewData["Title"] = "Actors";
}

<h3>My Actors</h3>
<br />
<partial name="SearchPartialView" />
<table class="table table-hover">
    <tr class="table-primary " style="font-size:22px">
        <th class="text-start ps-3">Actor Cover</th>
        <th class="text-start ps-3">Actor Name</th>
        <th class="text-end pe-3">Actions</th>
    </tr>
    @foreach(var i in Model)
    {
        <tr style="font-size:22px">
            <td class="align-middle">
                <div class="col-md-6  d-flex justify-content-center">
                    <img src="@($"{FileSettings.ImagePathActor}/{i.Cover}")" alt="@i.Name" style="width:140px ;height:140px ;border-radius:30px" />
                </div>
            </td >
            <td class="align-middle">@i.Name</td>
            <td class="align-middle">
                <partial name="_ActionPartialView" model="@i.Id" />
            </td>
        </tr>
    }
</table>
<a asp-action="AddActor" class="btn btn-primary btn-lg mt-3"> <i class="bi-plus-circle m-1 " style="color:gold"></i> Add Actor</a>
